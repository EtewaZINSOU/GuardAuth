{% extends 'base.html.twig' %}

{% block main %}
    <h1>Item</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ item.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ item.title }}</td>
            </tr>
            <tr>
                <th>Collection</th>
                <td>{{ item.collection }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ item.user }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ item.code }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ item.description }}</td>
            </tr>
            <tr>
                <th>Imageurl</th>
                <td>{{ item.imageUrl }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('linkedin_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('linkedin_edit', { 'id': item.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
