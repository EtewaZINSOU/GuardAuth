{% extends 'base.html.twig' %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="panel panel-success">
                    <div class="panel-heading">List of Game of Thrones Characters</div>

                    {% if app.user != null %}
                        <table class="table">
                            <tr>
                                <th>Character</th>
                                <th>Real Name</th>
                            </tr>

                            {% for key, item in characters %}
                                <tr>
                                    <td>{{ key }}</td><td>{{ item }}</td>
                                </tr>
                            {% endfor %}
                        </table>
                    {% endif %}
                </div>

                {% if app.user == null %}
                    <a href="{{ path('login') }}" class="btn btn-info"> You need to login to see the list ðŸ˜œðŸ˜œ >></a>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
